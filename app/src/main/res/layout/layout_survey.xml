<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="17dp"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#22add8a6"
            android:padding="5dp">
            <TextView
                android:id="@+id/tv_survey_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc"
                android:textSize="20sp"
                android:textStyle="bold"

                android:layout_margin="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/tv_survey_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="this is description"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/questions_border"
                android:layout_margin="5dp">
                <TextView
                    android:id="@+id/tv_num_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="total 5 questions"
                    android:layout_margin="2dp"/>
                <TextView
                    android:id="@+id/tv_start_date"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="start date: 5th august"
                    android:layout_margin="2dp"/>
                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="end date: 5th september"
                    android:layout_margin="2dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_fill_survey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fill survey"
                android:padding="5dp"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>